<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:orientation="vertical"
    tools:context="com.zzy.frank.www.citylove_master.activity.ShezhiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >

        <ImageView
            android:id="@+id/id_shezhi_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="设置"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/id_tuichu_acount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="退出"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_weight="3"/>
    </LinearLayout>

    <TextView
        android:id="@+id/id_dangqian"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="当前账号：11401"
        android:textSize="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="2"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="消息提醒"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/id_shezhi_notice"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="2"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="震动提醒"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="1"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="2"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="2"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="声音提醒"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/id_shezhi_voise"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="2"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="2"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="退出消息提醒"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="1.5"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="58dp"
                android:layout_weight="2"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/id_shezhi_advise"
            android:layout_width="match_parent"
            android:layout_height="49dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="2"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="意见反馈"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="2"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"></LinearLayout>

        <LinearLayout
            android:id="@+id/id_shezhi_checkupdae"
            android:layout_width="match_parent"
            android:layout_height="49dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="2"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="检测更新"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="2"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"></LinearLayout>

        <LinearLayout
            android:id="@+id/id_shezhi_activtyabout"
            android:layout_width="match_parent"
            android:layout_height="49dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="2"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="活动相关"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"></LinearLayout>

        <LinearLayout
            android:id="@+id/id_shezhi_about"
            android:layout_width="match_parent"
            android:layout_height="49dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="2"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="关于"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="2"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_shezhi_cleardata"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@android:color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="2"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="清除缓存"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="2"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="0.0Byte"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
