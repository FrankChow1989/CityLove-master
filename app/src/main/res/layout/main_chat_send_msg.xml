<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:layout_marginTop="10dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/chat_send_createDate"
        style="@style/chat_date_style"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_gravity="top|center"
        android:gravity="center"
        android:text="2012-09-01 18:30:21"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/chat_send_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/wel_rb_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:lineSpacingExtra="2dp"
                android:maxEms="10"
                android:minHeight="50dp"
                android:text="有大吗。。。"
                android:textColor="#000"
                android:textSize="18sp"
                />

            <com.zzy.frank.www.citylove_master.ui.RoundImageView
                android:id="@+id/chat_send_icon"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:src="@drawable/h7"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>