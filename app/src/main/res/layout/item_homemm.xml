<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:orientation="vertical"
              android:padding="5dp"
    >

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_weight="1">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/id_item_homemm_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="4dp"
            android:layout_gravity="center"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="300"
            fresco:failureImage="@drawable/rc_grid_image_error"
            fresco:failureImageScaleType="centerInside"
            fresco:placeholderImage="@drawable/rc_grid_image_default"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:progressBarImage="@drawable/jiazai_ing"
            fresco:retryImage="@drawable/icon_retry"
            fresco:retryImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
            fresco:roundedCornerRadius="1dp"
            />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:paddingLeft="35dp"
                android:paddingTop="3dp"
                android:src="@drawable/female_online"
                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:paddingBottom="3dp"
                android:paddingTop="2dp"
                android:text="在线"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                />

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/id_item_homemm_name"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="13dp"/>

</LinearLayout>