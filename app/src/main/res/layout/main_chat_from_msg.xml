<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/chat_from_createDate"
        style="@style/chat_date_style"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_gravity="top|center"
        android:gravity="center"
        android:text="2012-09-01 18:30:20"/>

    <RelativeLayout
        android:id="@+id/chat_from_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/chat_from_icon"
                android:layout_width="49dp"
                android:layout_height="49dp"
                fresco:actualImageScaleType="focusCrop"
                fresco:fadeDuration="300"
                fresco:failureImage="@drawable/rc_grid_image_error"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@drawable/rc_grid_image_default"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:progressBarImage="@drawable/jiazai_ing"
                fresco:retryImage="@drawable/icon_retry"
                fresco:retryImageScaleType="centerCrop"
                fresco:roundAsCircle="true"
                fresco:roundedCornerRadius="1dp"/>

            <TextView
                android:id="@+id/chat_from_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/from_send_txt_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:lineSpacingExtra="2dp"
                android:maxEms="10"
                android:minHeight="50dp"
                android:padding="8dp"
                android:text="有大吗。。。"
                android:textColor="#000"
                android:textSize="18sp"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_from_relative_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/chat_from_icon_pic"
                android:layout_width="49dp"
                android:layout_height="49dp"
                fresco:actualImageScaleType="focusCrop"
                fresco:fadeDuration="300"
                fresco:failureImage="@drawable/rc_grid_image_error"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@drawable/rc_grid_image_default"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:progressBarImage="@drawable/jiazai_ing"
                fresco:retryImage="@drawable/icon_retry"
                fresco:retryImageScaleType="centerCrop"
                fresco:roundAsCircle="true"
                fresco:roundedCornerRadius="1dp"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/chat_from_content_pic"
                android:layout_width="120dp"
                android:layout_height="190dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                fresco:actualImageScaleType="focusCrop"
                fresco:fadeDuration="300"
                fresco:failureImage="@drawable/rc_grid_image_error"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@drawable/rc_grid_image_default"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:progressBarImage="@drawable/jiazai_ing"
                fresco:retryImage="@drawable/icon_retry"
                fresco:retryImageScaleType="centerCrop"
                fresco:roundAsCircle="false"
                fresco:roundedCornerRadius="1dp"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_from_relative_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/chat_from_icon_record"
                android:layout_width="49dp"
                android:layout_height="49dp"
                fresco:actualImageScaleType="focusCrop"
                fresco:fadeDuration="300"
                fresco:failureImage="@drawable/rc_grid_image_error"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@drawable/rc_grid_image_default"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:progressBarImage="@drawable/jiazai_ing"
                fresco:retryImage="@drawable/icon_retry"
                fresco:retryImageScaleType="centerCrop"
                fresco:roundAsCircle="true"
                fresco:roundedCornerRadius="1dp"/>

            <RelativeLayout
                android:id="@+id/chat_from_content_record"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp">

                <FrameLayout
                    android:id="@+id/id_recorder_length"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/from_send_txt_bg"
                    >

                    <View
                        android:id="@+id/id_recorder_anim"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical|left"
                        android:background="@drawable/rc_ic_voice_receive"
                        />
                </FrameLayout>

                <TextView
                    android:id="@+id/id_recorder_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_toRightOf="@id/id_recorder_length"
                    android:text=""
                    android:textColor="#ff777777"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>